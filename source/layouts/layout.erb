<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <meta name="viewport" content="width=device-width">

    <link rel="profile" href="http://gmpg.org/xfn/11">

    <% if current_page.locals[:gallery] %>
      <title><%= current_page.locals[:gallery].name %> | <%= current_page.locals[:category].name %> | <%= data.site.info.title %></title>
    <% elsif current_page.locals[:category] %>
      <title><%= current_page.locals[:category].name %> | <%= data.site.info.title %></title>
    <% elsif current_page.data.title %>
      <title><%= current_page.data.title %> | <%= data.site.info.title %></title>
    <% else %>
      <title><%= data.site.info.title %></title>
    <% end %>

    <%= stylesheet_link_tag "all" %>

    <script src="//use.typekit.net/ioi4abv.js"></script>
    <script>try{Typekit.load();}catch(e){}</script>
  </head>

  <body class="<%= page_classes %>">

    <div id="page" class="hfeed site">

    <% if current_page.path == 'index.html' %>
        <img src="<%= image_path 'Ireland-6638.jpg' %>" id="background_img_dummy" style="display: none;" />

        <div id="background_img" style="background-image: url(<%= image_path 'Ireland-6638.jpg' %>);"></div>
      <% end %>

      <div id="main" class="site-main">

        <%= partial 'partials/sidebar' %>

        <div id="main-content" class="main-content">

          <div id="primary" class="content-area">

            <div id="content" class="site-content" role="main">

              <%= yield %>

            </div><!-- #content -->
            
          </div><!-- #primary -->

          <%= partial 'partials/footer' %>

        </div><!-- #main-content -->

      </div><!-- #main -->

    </div><!-- #page -->

    <%= javascript_include_tag "all" %>

  </body>
</html>
